        <div class="compose-div">
            <h1 class="comphead">Compose</h1>
            <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-6 col-sm-12 mt-lg-0 mt-sm-5">
                    <form class="" action="/compose" method="post">

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">Title</span>
                            </div>

                            <input class="form-control" type="text" maxlength="50" name="postTitle" required placeholder="Enter Your Required Title (Max 100 characters)" aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">Image</span>
                            </div>

                            <input class="form-control" type="text" name="postImage" required placeholder="Paste Image Address" aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">Post</span>
                            </div>
                            <textarea class="form-control" required name="postBody" rows="9" cols="30"></textarea>
                        </div>

                        <button class="btn btn-primary btn-lg" type="submit" name="button">Publish</button>
                    </form>
                </div>
                <div class="col-lg-3"></div>
            </div>

        </div>
        </div>
