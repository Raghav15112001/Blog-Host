    <link href="/css/bootstrap.min.css" rel="stylesheet">





    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }
        
        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>

    <link href="/css/account.css" rel="stylesheet">



</head>

<body class="account-bg">
    <nav class="navbar  navbar-expand-lg navbar-dark pt-4">
        <div class="container-fluid">

            <p class="navbar-brand px-3">BlogHost</p>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav navbar-right ml-auto" style="font-size: 1.3em;">
                    <li class="nav-item" id="navcon"><a href="/home">HOME</a></li>
                    <li class="nav-item" id="navcon"><a href="/logout">LOG OUT</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- <div class=""> -->
    <!-- <div class="row"> -->

    <div class="container px-4 py-5" id="custom-cards">
        <!-- <h2 class="pb-2 border-bottom">Your Posts</h2> -->

        <!-- <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5"> -->






        <% for( let i = posts.length-1; i >=0; i-- ) { %>
            <% if(posts[i]._id==iD){ %>


                <!-- Username section lies here -->


                <h1 class="text-shadow-2">
                    <%= posts[i].name %>
                </h1>
                <!-- Posts Section starts here -->
                <h2 class="pb-2 border-bottom text-shadow-1 ">Your Posts</h2>
                <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">

                    <% for( let j=posts[i].postComp.length - 1; j >=0; j-- ) { %>


                        <div class="col">
                            <div class="card card-cover h-100 overflow-hidden text-white bg-dark rounded-5 acc-eff shadow-lg" style="background-image: url(<%=posts[i].postComp[j].image%>);">
                                <div class="d-flex flex-column h-100 p-5 pb-3 text-shadow-2">
                                    <h2 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold text-shadow-3">
                                        <%=posts[i].postComp[j].title%>
                                    </h2>
                                    <ul class="d-flex list-unstyled mt-auto">
                                        <li class="me-auto">
                                            <img src="images/favicon.png" alt="Bootstrap" width="32" height="32" class="rounded-circle border border-white">
                                        </li>
                                        <li class="d-flex align-items-center me-3">
                                            <svg class="bi me-2" width="1em" height="1em"><use xlink:href="#geo-fill"/></svg>
                                            <small><a class="btn btn-sm btn-success mt-2" style="border-radius: 8px;" href="/posts/<%=posts[i]._id%>/<%=posts[i].postComp[j]._id%>">Read More</a></small>
                                        </li>
                                        <!-- <li class="d-flex align-items-center">
                                                    <svg class="bi me-2" width="1em" height="1em"><use xlink:href="#calendar3"/></svg>
                                                    <small>5d</small>
                                                </li> -->
                                    </ul>
                                </div>
                            </div>
                        </div>


                        <% } %>
                            <%}%>
                                <% } %>
                </div>
    </div>
    <!-- </div> -->

    <form action="/compose" method="GET" class="btn-allpost">
        <button class="btn btn-lg btn-success btn-acc"><i class="fas fa-plus"></i></button>

    </form>

    <!-- </div> -->
    </div>
    <div class="footer">
        <p>&copy BlogHost</p>
    </div>





    <script src="/js/account.js"></script>


</body>

</html>